<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="25dp"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="392dp"
        android:layout_height="238dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/img_4"
        android:contentDescription="todoo" />

    <EditText
        android:id="@+id/Email"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginTop="36dp"
        android:background="@color/material_dynamic_secondary95"
        android:ems="10"
        android:hint="exemple_gmail_com"
        android:inputType="textEmailAddress"
        android:padding="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.32"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        />

    <EditText
        android:id="@+id/Password"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginTop="28dp"
        android:background="@color/material_dynamic_secondary95"
        android:ems="10"
        android:hint="pass"
        android:inputType="textPassword"
        android:minHeight="48dp"
        android:padding="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Email"
        />
    <TextView
        android:id="@+id/error"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Password"
        android:visibility="gone"
        android:textColor="@color/error"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        tools:ignore="MissingConstraints" />
    <Button
        android:id="@+id/connect"
        android:layout_width="172dp"
        android:layout_height="52dp"
        android:layout_marginTop="64dp"
        android:text="se_connecter"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/creerCompte"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Password"
        android:layout_below="@+id/error"/>

    <TextView
        android:id="@+id/creerCompte"
        android:layout_width="153dp"
        android:layout_height="28dp"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="16dp"
        android:text="cr_er_un_compte"
        android:textAlignment="textEnd"
        android:textColor="@color/purple_500"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Password" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="139dp"
        android:layout_height="36dp"
        android:layout_marginTop="136dp"
        android:text="besoin_d_aide"
        android:textAlignment="center"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/creerCompte" />


</androidx.constraintlayout.widget.ConstraintLayout>